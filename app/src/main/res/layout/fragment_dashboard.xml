<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainSebhaRL"
    android:background="@drawable/islamic_app_underground"
    tools:context=".ui.dashboard.SebhaFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sebha1"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="-15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="لا آله آلا آلله"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/sebha1"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sebha3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="-15dp"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/sebha2"
        android:textStyle="bold"
        android:text="لا آله آلا آلله"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/sebha1"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/sebha1"
        android:id="@+id/sebha2"
        android:textStyle="bold"
        android:text="لا آله آلا آلله"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/quransurabtn"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_sebha"
        android:visibility="visible"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/sebha"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="مجموع التسبيحات اليوم"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:id="@+id/resetBtn2"
        >



        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/dailyCnt"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:textSize="30sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="35dp"
            android:id="@+id/resetBtn"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reset"/>

    </LinearLayout>
</RelativeLayout>