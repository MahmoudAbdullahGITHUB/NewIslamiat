<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/morebg"
    android:id="@+id/compass_container"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/compass_rl"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main_image_dial"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pointer_bg" />

    <!--<ImageView-->
    <!--android:id="@+id/main_image_hands"-->
    <!--android:layout_width="20dp"-->
    <!--android:layout_height="240dp"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:contentDescription="@string/compass_hands"-->
    <!--android:scaleType="fitXY"-->
    <!--android:src="@drawable/hands" />-->

    <ImageView
        android:id="@+id/main_image_qiblat"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/qibla_pointer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ملحوظة: يجب أن يكون الهاتف بعيد عن أي شيء معدني مثل (ساعة اليد) \n لآنها تؤثر بشكل كبير على البوصلة"
        android:layout_below="@id/main_image_dial"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="هل تريد قبلة جوجل ؟"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_above="@id/google_compass"
        android:layout_marginBottom="30dp"
        android:id="@+id/compass_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/google_compass"
        android:layout_centerHorizontal="true"
        android:text="اضغط هنا"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@drawable/btnpurple"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/teks_atas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/teks_bawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="40dp" />
    </RelativeLayout>
</RelativeLayout>
