<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morebg"
    android:clickable="true"
    tools:context=".ui.PrayerSettingsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:id="@+id/prayer_settings_top_ll"
        android:background="@drawable/btntransparent"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="إعدادات الصلاة"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ضبط الوقت"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:id="@+id/prayer_settings_first_title"
        android:layout_below="@id/prayer_settings_top_ll"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="5dp"
        android:alpha="0.7"
        android:gravity="center_horizontal"
        android:id="@+id/prayer_settings_ll"
        android:layout_below="@id/prayer_settings_first_title"
        android:background="@drawable/btntransparent"
        android:layout_centerHorizontal="true">
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:text="١٢ ساعة"
                android:id="@+id/time_12"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:text="٢٤ ساعة"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/time_24"
                android:layout_marginStart="100dp"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="صوت التنبيه"
        android:layout_below="@id/prayer_settings_ll"
        android:background="@drawable/btntransparent"
        android:drawableEnd="@drawable/forward"
        android:alpha="0.7"
        android:paddingEnd="15dp"
        android:id="@+id/prayer_sound_btn"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="أوقات الإقامة"
        android:layout_below="@id/prayer_sound_btn"
        android:background="@drawable/btntransparent"
        android:drawableEnd="@drawable/forward"
        android:alpha="0.7"
        android:paddingEnd="15dp"
        android:id="@+id/prayer_iqama_btn"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="مرجع حسابات الصلوات"
        android:layout_below="@id/prayer_iqama_btn"
        android:background="@drawable/btntransparent"
        android:drawableEnd="@drawable/forward"
        android:alpha="0.7"
        android:paddingEnd="15dp"
        android:id="@+id/prayer_calc_btn"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

</RelativeLayout>