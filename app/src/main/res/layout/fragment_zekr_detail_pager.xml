<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ZekrDetailPagerFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/zekr_detail_header"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/zekr_detail_body"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:layout_below="@id/zekr_detail_header"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/zekr_detail_footer"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/zekr_detail_body"
        android:gravity="start"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="match_parent"
        android:layout_below="@id/zekr_detail_footer"
        android:layout_marginTop="10dp"
        android:id="@+id/view_counter"
        android:visibility="gone"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/zekr_detail_counter"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/zekr_detail_footer"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/progress_rl"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="1"
            android:id="@+id/txt_counter"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>