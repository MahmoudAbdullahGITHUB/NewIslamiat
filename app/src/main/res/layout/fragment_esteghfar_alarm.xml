<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morebg"
    android:clickable="true"
    tools:context=".EsteghfarAlarmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/morebg"
            android:clickable="true"
            tools:context=".EsteghfarAlarmFragment">

            <LinearLayout
                android:id="@+id/Esteghfar_alarm_top_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="0.8"
                android:background="@drawable/btntransparent"
                android:gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="منبه الاستغفار"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Switch
                android:id="@+id/esteghfar_alarm_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Esteghfar_alarm_top_ll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/esteghfar_img"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_below="@id/esteghfar_alarm_switch"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/esteghfar" />


            <RelativeLayout
                android:id="@+id/esteghfaralarmrl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/esteghfar_img"
                android:layout_margin="20dp"
                android:alpha="0.5"
                android:background="@drawable/btntransparent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/alarmstarttv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/alarmstarttv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alarmstarttv2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alarmstarttv3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/esteghfaralarmrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/esteghfar_img"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/alarmstarttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="بداية التنبيه"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/starttime_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/white"
                    android:text="14:88"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alarmstarttv"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="نهاية التنبيه"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/endtime_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/starttime_picker"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:background="@android:color/white"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/endtime_picker"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="التكرار"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/esteghfar_repetition"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/white"
                        android:entries="@array/esteghfar_intervals"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>


            <Button
                android:id="@+id/esteghfar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/esteghfaralarmrl"
                android:layout_margin="20dp"
                android:background="@drawable/btnlightblue"
                android:drawableEnd="@drawable/forward"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="صوت التنبيه"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/save_esteghfar_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/esteghfar_btn"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/btnpurple"
                android:gravity="center"
                android:padding="20dp"
                android:text="حفظ"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
