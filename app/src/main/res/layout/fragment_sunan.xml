<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/morebg"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ui.SunanFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:id="@+id/sunan_top_ll"
        android:background="@drawable/btntransparent"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="السنن النبوية" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btntransparent"
        android:alpha="0.5"
        android:layout_below="@id/sunan_top_ll"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        >
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sunan_list"
        android:layout_width="match_parent"
        android:layout_below="@id/sunan_top_ll"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="70dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>